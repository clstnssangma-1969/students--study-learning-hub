            <div class="sidebar">
                <div class="score-card">
                    <div class="score-title">Your Score</div>
                    <div class="score-value" id="score-value">0/20</div>
                </div>
                
                <div class="quick-nav">
                    <h3>Question Navigation</h3>
                    <div class="nav-buttons" id="nav-buttons">
                        <!-- Navigation buttons will be generated by JavaScript -->
                    </div>
                </div>
                
                <div class="timer">
                    <h3>Time Elapsed</h3>
                    <div class="time-display" id="time-display">00:00</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Questions data with correct answers
        const questionsData = [
            { correctAnswer: 2 }, // Q41
            { correctAnswer: 1 }, // Q42
            { correctAnswer: 0 }, // Q43
            { correctAnswer: 1 }, // Q44
            { correctAnswer: 3 }, // Q45
            { correctAnswer: 2 }, // Q46
            { correctAnswer: 0 }, // Q47
            { correctAnswer: 0 }, // Q48
            { correctAnswer: 0 }, // Q49
            { correctAnswer: 0 }, // Q50
            { correctAnswer: 0 }, // Q51
            { correctAnswer: 2 }, // Q52
            { correctAnswer: 1 }, // Q53
            { correctAnswer: 1 }, // Q54
            { correctAnswer: 0 }, // Q55
            { correctAnswer: 0 }, // Q56
            { correctAnswer: 0 }, // Q57
            { correctAnswer: 1 }, // Q58
            { correctAnswer: 0 }, // Q59
            { correctAnswer: 1 }  // Q60
        ];

        // User answers array
        let userAnswers = Array(20).fill(null);
        let score = 0;
        let timerInterval;
        let seconds = 0;

        // DOM elements
        const navButtonsContainer = document.getElementById('nav-buttons');
        const progressBar = document.getElementById('progress');
        const progressText = document.getElementById('progress-text');
        const scoreValue = document.getElementById('score-value');
        const timeDisplay = document.getElementById('time-display');
        const checkBtn = document.getElementById('check-btn');
        const resetBtn = document.getElementById('reset-btn');
        const showAllBtn = document.getElementById('show-all-btn');

        // Initialize the quiz
        function initQuiz() {
            createNavigationButtons();
            setupEventListeners();
            startTimer();
            updateProgress();
        }

        // Create navigation buttons
        function createNavigationButtons() {
            navButtonsContainer.innerHTML = '';
            
            for (let i = 0; i < 20; i++) {
                const button = document.createElement('button');
                button.className = 'nav-btn';
                button.textContent = i + 41;
                button.addEventListener('click', () => {
                    scrollToQuestion(i);
                });
                navButtonsContainer.appendChild(button);
            }
        }

        // Scroll to a specific question
        function scrollToQuestion(index) {
            const questionElement = document.getElementById(`question-${index + 1}`);
            if (questionElement) {
                questionElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Highlight the current question in navigation
                document.querySelectorAll('.nav-btn').forEach((btn, i) => {
                    btn.classList.toggle('current', i === index);
                });
            }
        }

        // Setup event listeners for options
        function setupEventListeners() {
            // Add click events to all options
            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', function() {
                    const questionContainer = this.closest('.question-container');
                    const questionId = questionContainer.id;
                    const questionIndex = parseInt(questionId.split('-')[1]) - 1;
                    const optionIndex = parseInt(this.getAttribute('data-index'));
                    
                    selectOption(questionIndex, optionIndex);
                });
            });
            
            // Add event listeners to control buttons
            checkBtn.addEventListener('click', checkAllAnswers);
            resetBtn.addEventListener('click', resetQuiz);
            showAllBtn.addEventListener('click', showAllAnswers);
        }

        // Select an option for a question
        function selectOption(questionIndex, optionIndex) {
            // Reset previous selection for this question
            const questionElement = document.getElementById(`question-${questionIndex + 1}`);
            questionElement.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Mark the selected option
            const selectedOption = questionElement.querySelector(`.option[data-index="${optionIndex}"]`);
            selectedOption.classList.add('selected');
            
            // Store the user's answer
            userAnswers[questionIndex] = optionIndex;
            
            // Update the navigation button for this question
            const navButton = navButtonsContainer.children[questionIndex];
            navButton.classList.add('answered');
            
            updateProgress();
        }

        // Update progress bar and text
        function updateProgress() {
            const answeredCount = userAnswers.filter(answer => answer !== null).length;
            const progressPercentage = (answeredCount / 20) * 100;
            
            progressBar.style.width = `${progressPercentage}%`;
            progressText.textContent = `${answeredCount}/20 Answered`;
            
            // Enable check button if all questions are answered
            checkBtn.disabled = answeredCount < 20;
        }

        // Check all answers and calculate score
        function checkAllAnswers() {
            score = 0;
            
            for (let i = 0; i < 20; i++) {
                const questionElement = document.getElementById(`question-${i + 1}`);
                const feedback = questionElement.querySelector('.feedback');
                const feedbackIcon = feedback.querySelector('.feedback-icon');
                const feedbackText = feedback.querySelector('.feedback-text');
                
                if (userAnswers[i] === questionsData[i].correctAnswer) {
                    // Correct answer
                    score++;
                    feedback.classList.add('correct');
                    feedback.classList.remove('incorrect');
                    feedbackIcon.textContent = '‚úì';
                    feedbackText.textContent = 'Correct! Well done.';
                    
                    // Highlight correct option
                    questionElement.querySelectorAll('.option').forEach(opt => {
                        opt.classList.remove('correct', 'incorrect');
                        if (parseInt(opt.getAttribute('data-index')) === questionsData[i].correctAnswer) {
                            opt.classList.add('correct');
                        }
                    });
                } else {
                    // Incorrect answer
                    feedback.classList.add('incorrect');
                    feedback.classList.remove('correct');
                    feedbackIcon.textContent = '‚úó';
                    feedbackText.textContent = `Incorrect. The correct answer is ${String.fromCharCode(65 + questionsData[i].correctAnswer)}.`;
                    
                    // Highlight correct and incorrect options
                    questionElement.querySelectorAll('.option').forEach(opt => {
                        const optIndex = parseInt(opt.getAttribute('data-index'));
                        opt.classList.remove('correct', 'incorrect');
                        
                        if (optIndex === questionsData[i].correctAnswer) {
                            opt.classList.add('correct');
                        } else if (optIndex === userAnswers[i]) {
                            opt.classList.add('incorrect');
                        }
                    });
                }
            }
            
            // Update score display
            scoreValue.textContent = `${score}/20`;
            
            // Show alert with score
            const percentage = (score / 20) * 100;
            let message;
            if (percentage >= 90) {
                message = "Outstanding! You're a computer science expert!";
            } else if (percentage >= 75) {
                message = "Excellent work! You have a strong understanding of the concepts.";
            } else if (percentage >= 60) {
                message = "Good job! You passed with a solid score.";
            } else if (percentage >= 50) {
                message = "You passed, but consider reviewing the material again.";
            } else {
                message = "Keep studying! Review the questions you got wrong.";
            }
            
            alert(`Quiz Completed!\nYour Score: ${score}/20 (${percentage}%)\n\n${message}`);
        }

        // Show all correct answers
        function showAllAnswers() {
            for (let i = 0; i < 20; i++) {
                const questionElement = document.getElementById(`question-${i + 1}`);
                const feedback = questionElement.querySelector('.feedback');
                const feedbackIcon = feedback.querySelector('.feedback-icon');
                const feedbackText = feedback.querySelector('.feedback-text');
                
                feedback.classList.add('correct');
                feedback.classList.remove('incorrect');
                feedbackIcon.textContent = '‚úì';
                feedbackText.textContent = `Correct answer: ${String.fromCharCode(65 + questionsData[i].correctAnswer)}`;
                
                // Highlight correct option
                questionElement.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('correct', 'incorrect', 'selected');
                    if (parseInt(opt.getAttribute('data-index')) === questionsData[i].correctAnswer) {
                        opt.classList.add('correct');
                    }
                });
                
                // Mark as answered in navigation
                const navButton = navButtonsContainer.children[i];
                navButton.classList.add('answered');
                
                // Store the correct answer as user's answer
                userAnswers[i] = questionsData[i].correctAnswer;
            }
            
            updateProgress();
            scoreValue.textContent = "20/20";
        }

        // Reset the quiz
        function resetQuiz() {
            if (confirm("Are you sure you want to reset all answers?")) {
                userAnswers = Array(20).fill(null);
                score = 0;
                
                // Reset all questions
                for (let i = 0; i < 20; i++) {
                    const questionElement = document.getElementById(`question-${i + 1}`);
                    questionElement.querySelectorAll('.option').forEach(opt => {
                        opt.classList.remove('selected', 'correct', 'incorrect');
                    });
                    
                    const feedback = questionElement.querySelector('.feedback');
                    feedback.classList.remove('correct', 'incorrect');
                }
                
                // Reset navigation buttons
                document.querySelectorAll('.nav-btn').forEach(btn => {
                    btn.classList.remove('answered');
                });
                
                // Reset score and progress
                scoreValue.textContent = "0/20";
                updateProgress();
                
                // Restart timer
                clearInterval(timerInterval);
                seconds = 0;
                updateTimerDisplay();
                startTimer();
            }
        }

        // Start the timer
        function startTimer() {
            timerInterval = setInterval(() => {
                seconds++;
                updateTimerDisplay();
            }, 1000);
        }

        // Update timer display
        function updateTimerDisplay() {
            const minutes = Math.floor(seconds / 60);
            const remainingSeconds = seconds % 60;
            timeDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${remainingSeconds.toString().padStart(2, '0')}`;
        }

        // Initialize the quiz when the page loads
        document.addEventListener('DOMContentLoaded', initQuiz);
    </script>
    <h5>Developed by Sir Celestine Sangma for SSLC students of DBSM- 2025 batch</h5>
</body>
</html>
